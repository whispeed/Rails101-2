<div class="col-md-12">
  <div class="group">
    <%= link_to("新建话题", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>标题</td>
        <td>内容</td>
        <td>创建者</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td>#</td>
        <td><%= link_to(group.title, group_path(group)) %></td>
        <td><%= group.description %></td>
        <td><%= group.user.email %></td>
        <td>
          <%= link_to("修改", edit_group_path(group), class: "btn btn-sm btn-default")%>
          <%= link_to("删除", group_path(group), class: "btn btn-sm btn-default",
                      method: :delete, data: { confirm: "Are you sure?" } )%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
