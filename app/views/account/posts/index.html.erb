<div class="col-md-12">

  <h2 class="text-center"> 我发表的评论 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 评论内容 </th>
        <th> 所属话题 </th>
        <th> 更新时间 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.content %> </td>
          <td> <%= post.group.title %> </td>
          <td> <%= post.updated_at %> </td>
          <td> <%= link_to('修改', edit_group_post_path(post.group, post), class: "btn btn-default btn-xs") %></td>
          <td> <%= link_to('删除', group_post_path(post.group, post), method: :delete, data: { confirm: "真的要删除吗？删了可就没有了…" }, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
